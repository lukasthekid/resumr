generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  passwordHash  String? // Deprecated - no longer used, kept for migration compatibility

  // Profile settings
  phoneNumber   String?
  streetAddress String?
  city          String?
  postcode      String?
  country       String?
  linkedInUrl   String?

  accounts      Account[]
  sessions      Session[]
  applications  JobApplication[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model JobListing {
  id                 Int      @id @default(autoincrement())
  url                String   @db.Text
  companyName        String   @default("")
  companyLogo        String   @default("") @db.Text
  jobTitle           String   @default("")
  locationCity       String   @default("")
  country            String   @default("")
  numberOfApplicants Int      @default(0)
  jobDescription     String   @default("") @db.Text

  applications       JobApplication[]

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@unique([url])
  @@index([url])
}

enum ApplicationStatus {
  SAVED
  APPLIED
  INTERVIEWING
  OFFER
  ACCEPTED
  REJECTED
  WITHDRAWN
}

model JobApplication {
  id          Int               @id @default(autoincrement())
  userId      String
  jobId       Int
  status      ApplicationStatus @default(SAVED)
  notes       String?           @db.Text

  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  job         JobListing        @relation(fields: [jobId], references: [id], onDelete: Cascade)

  appliedAt   DateTime?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@unique([userId, jobId])
  @@index([userId])
  @@index([status])
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Verification {
  id         String    @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
}

// This table is used outside Prisma (pgvector / embeddings). Schema matches the
// current DB: bigserial id, text, vector(768), metadata. Kept in schema (ignored)
// so `prisma migrate` won't try to delete it.
model Document {
  id        BigInt                        @id @default(autoincrement())
  text      String                        @db.Text
  embedding Unsupported("vector(768)")?
  metadata  Json                          @default(dbgenerated("'{}'::jsonb")) @db.JsonB
  createdAt DateTime?                     @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime?                     @default(now()) @map("updated_at") @db.Timestamptz(6)

  @@map("documents")
  @@index([embedding], map: "documents_embedding_idx")
  @@index([metadata], type: Gin, map: "idx_documents_metadata")
  @@ignore
}

